<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style4.css">
    <title>RECIPE BLOG</title>
</head>
<body>
    <div class="container">
        <div>
            <h1 class="title">RECIPE BLOG <p class="email">Email: <%= email %></p></h1>
            <form action="/closed/<%=userId%>" method="post">
                <button class="close">Close<i class="fa-solid fa-xmark"></i></button>
            </form>
        </div>
        <hr>
        <% if (locals.recipe) { %>
            <h2><%= type %></h2>
            <form action="/edited/<%= recipe.id%>" method="post">
                <input class="recipe-name" required type="text" name="name" value="<%= recipe.name %>">
                <textarea type="text" name="ingredients" required><%= recipe.ingredients.replace(/\\n/g, "\n") %></textarea>
                <textarea type="text" name="steps" required><%= recipe.steps.replace(/\\n/g, "\n") %></textarea>
                <input type="submit" value="<%= submit %>">
            </form>
        <% } else { %>
            <h2><%= type %></h2>
            <form action="/post/<%= userId %>" method="post">
                <input class="recipe-name"  type="text" name="name" placeholder="Recipe Name" required>
                <textarea type="text" name="ingredients" placeholder="Enter Ingredients" required ></textarea>
                <textarea type="text" name="steps" placeholder="Enter the steps to prepare" required></textarea>
                <input type="submit" value="<%= submit %>">
            </form>
        <% } %>
    </div>
    <script src="https://kit.fontawesome.com/6c51713392.js" crossorigin="anonymous"></script>
</body>
</html>
